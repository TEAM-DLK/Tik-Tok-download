{
  "name": "tiktok-downloader-bot",
  "description": "A Telegram bot that downloads TikTok videos without watermarks.",
  "repository": "https://github.com/YourUsername/tiktok-downloader-bot",
  "keywords": ["python", "telegram", "bot", "tiktok", "downloader"],
  "env": {
    "API_ID": {
      "description": "Your Telegram API ID",
      "required": true
    },
    "API_HASH": {
      "description": "Your Telegram API Hash",
      "required": true
    },
    "BOT_TOKEN": {
      "description": "Your Telegram Bot Token",
      "required": true
    },
    "DOWNLOADS_DIR": {
      "description": "Directory for storing downloads",
      "required": true,
      "value": "downloads/"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}